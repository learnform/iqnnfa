package com.thirdparty.wps;

import cn.jiguang.common.utils.Nullable;
import com.dr.common.SecurityUtils;
import com.thirdparty.http.HttpApiUtils;
import org.apache.http.util.Args;
import org.apache.log4j.Logger;


/**
 * @author 李小双
 */
abstract class BaseWpsApiObject extends HttpApiUtils implements WpsApiObject {

    private Logger logger = org.apache.log4j.Logger.getLogger(this.getClass());


    final static String URL = "https://vip.wps.cn";
    final static String KEY = "";


    /**
     * 获得加密串.
     *
     * @param parameter 参数
     * @return 加密后的结果
     */
    @Nullable
    String getSignature(String parameter) {
        Args.notEmpty(parameter, "parameter is null");
        String result = SecurityUtils.MD5(parameter + KEY);
        if (result != null) {
            return result.toLowerCase();
        } else {
            logger.error("加密错误::" + parameter);
        }
        return null;
    }
}
