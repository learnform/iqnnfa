package com.dr.controller.task;

import java.io.IOException;
import java.math.BigDecimal;
import java.util.Date;
import java.util.List;

import org.apache.log4j.Logger;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.dr.common.PropertyUtil;
import com.dr.common.Utils;
import com.dr.dao.article.SysArticleDAO;
import com.dr.dao.product.DrProductInfoDAO;
import com.dr.model.article.SysArticle;
import com.dr.model.product.DrProductInfo;
/**
 * 
 * ClassName: AutoPubPaymengNotice
 * Function: TODO 自动发送还款公告任务
 * date: 2018年4月8日 上午11:30:37
 * 
 * @author fanlongbiao 
 * @version  
 * @since JDK 1.7
 */
@Component
public class AutoPubPaymentNoticeTask {
	
	@Autowired
	private DrProductInfoDAO drProductInfoDAO;
	@Autowired
	private SysArticleDAO sysArticleDAO;
	
	private final static Logger log = Logger.getLogger(AutoPubPaymentNoticeTask.class);
	
	public void autoPubPaymentNotice(){
		log.info("---------自动发送还款公告任务开始---------");
		List<DrProductInfo> expireProductInfoList = drProductInfoDAO.selectNowdayExpireProductInfo();
		if(expireProductInfoList.size()==0){
			log.info("---------当天没有要回款的产品---------");
			return;
		}else{
			for (DrProductInfo drProductInfo : expireProductInfoList) {
				try {
					SysArticle article = new SysArticle();
					//计算项目收益
					BigDecimal dayRate = Utils.nwdDivide(Utils.nwdDivide(drProductInfo.getRate(),100), 360);//日息
					BigDecimal investProfit = drProductInfo.getAmount().multiply(dayRate);
					
					article.setTitle(drProductInfo.getFullName()+"还款公告");
					article.setProId(15);
					article.setCreateTime(new Date());
					article.setType((short) 1);
					//还款公告正文
					String msg = PropertyUtil.getProperties("paymentProductInfo")
					.replace("${1}", drProductInfo.getFullName())
					.replace("${2}", drProductInfo.getAmount().setScale(2).toString())
					.replace("${3}", drProductInfo.getDeadline().toString())
					.replace("${4}", drProductInfo.getRate().toString())
					.replace("${5}", investProfit.setScale(2).toString());
					article.setContent(msg);
					article.setStatus(1);
					sysArticleDAO.insertSysArticle(article);
				} catch (IOException e) {
					log.error(e.getMessage()+"获取paymentProductInfo信息失败");
				}
			}
		}
	}
}
















