package com.dr.dao.cpa;

import com.dr.model.cpa.DrChannelRewardPhonedata;

import java.util.HashMap;
import java.util.List;

import com.dr.model.cpa.RewardPhoneDataMemberInfo;
import com.dr.model.member.DrMember;
import org.apache.ibatis.annotations.Param;

public interface DrChannelRewardPhonedataDao {

    int deleteByPrimaryKey(Integer id);

    int insert(DrChannelRewardPhonedata record);

    int insertSelective(DrChannelRewardPhonedata record);


    DrChannelRewardPhonedata selectByPrimaryKey(Integer id);

    int updateByPrimaryKeySelective(DrChannelRewardPhonedata record);

    int updateByPrimaryKey(DrChannelRewardPhonedata record);

    void batchInsert(@Param("records") List<DrChannelRewardPhonedata> records);

    void batchUpdateByPrimaryKey(@Param("records") List<DrChannelRewardPhonedata> records);

    void batchDeleteByPrimaryKey(@Param("records") List<String> records);

    /**
     * 获取绑卡尚未赠送流量的用户
     * @return
     */
    List<RewardPhoneDataMemberInfo> getAwardUserByBindCard();


    /**
     * 获取符合条件首次投资的尚未赠送的数据
     * @return
     */
    List<RewardPhoneDataMemberInfo>  getAwardUserByInvest();

    /**
     * 查找赠送失败的数据
     * @return
     */
    List<DrChannelRewardPhonedata> selectFaildReward();
    /**
     * 查询wps活动页注册和已经绑卡 且未投资的记录
     * @param map
     */
	void selectWpsStatusInfo(HashMap<String, Object> map);


}